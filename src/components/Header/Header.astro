---
import Icon from "@/components/Icon.astro";
import NavLink from "./NavLink.astro";

interface Props {
  currentPath: string;
}

const { currentPath } = Astro.props;
---

<header
  class="sticky top-0 z-40 flex flex-wrap items-baseline justify-between border-b border-gray-400 p-4 backdrop-blur"
>
  <nav class="my-1 basis-full md:basis-1/2 lg:basis-5/12 xl:basis-1/3">
    <ul class="flex justify-between text-xl font-light uppercase">
      <NavLink href="/" active={"/" === currentPath}>Home</NavLink>
      <!-- <NavLink href="/blog" active={'/blog' === currentPath}>Blog</NavLink> -->
      <NavLink href="/projects" active={"/projects" === currentPath}>
        Projects
      </NavLink>
      <NavLink href="/about" active={"/about" === currentPath}>About</NavLink>
    </ul>
  </nav>
  <div class="hidden md:flex">
    <Icon
      icon="GitHub"
      class="mx-2 w-6 fill-none stroke-gray-400 stroke-2 duration-100 ease-in hover:scale-110 hover:stroke-cyan-400"
      href="https://www.github.com/dylf"
    />
    <Icon
      icon="Twitter"
      class="mx-2 w-6 fill-none stroke-gray-400 stroke-2 duration-100 ease-in hover:scale-110 hover:stroke-cyan-400"
      href="https://www.twitter.com/ShallowClone"
    />
    <Icon
      icon="LinkedIn"
      class="ml-2 w-6 fill-none stroke-gray-400 stroke-2 duration-100 ease-in hover:scale-110 hover:stroke-cyan-400"
      href="https://www.linkedin.com/in/dylan-fontaine/"
    />
  </div>
</header>
